{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Projets</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Afficher le Projet</h2>
        <div class="mycontentformshow">
            <ul>
                <li class="returnlist">
                    <a data-ajax="false" class="btn btn-default" href="{{ path('projet_index') }}">Retourner à la liste</a>
                </li>
            </ul>
            <table class="tableautitle">
                <tbody>
                    <tr>
                        <th class="mytdtabshow">Intitulé du Projet</th>
                        <td class="mytdtabshow">{{ projet.id_projet }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Prix</th>
                        <td class="mytdtabshow2">{{ projet.prix }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Etape</th>
                        <td class="mytdtabshow">{{ projet.etape }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Description</th>
                        <td class="mytdtabshow2">{{ projet.description }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Société</th>
                        <td class="mytdtabshow">{{ projet.id_societe }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Cahier des Charges</th>
                        <td class="mytdtabshow2">{{ projet.idCdc }}</td>
                    </tr>
                </tbody>
            </table>

            <ul>
                <li class="myeditli">
                    <a data-ajax="false" class="btn btn-info" style="color:white;" href="{{ path('projet_edit', { 'id': projet.id_projet }) }}">Modifier</a>
                </li>
                   {% if is_granted("ROLE_ADMIN") %}
                <li  class="mydeleteli">
                    {{ form_start(delete_form) }}
                        <input type="submit" rel="external" value="Supprimer le projet">
                    {{ form_end(delete_form) }}
                </li>
                {% endif %}
            </ul>
        </div>
                
    </div>
{% endblock %}
