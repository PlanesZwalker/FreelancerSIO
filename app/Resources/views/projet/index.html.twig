{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Projets</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Liste des Projets</h2>
        <div class="mycontentform">
            <table>
                <thead>
                    <tr>
                        <th>id_projet</th>
                        <th>Prix</th>
                        <th>Etape</th>
                        <th>Description</th>
                        <th>id_societe</th>
                        <th>Idcdc</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for projet in projets %}
                    <tr>
                        <td><a href="{{ path('projet_show', { 'id': projet.id_projet }) }}">{{ projet.id_projet }}</a></td>
                        <td>{{ projet.prix }}</td>
                        <td>{{ projet.etape }}</td>
                        <td>{{ projet.description }}</td>
                        <td>{{ projet.id_societe }}</td>
                        <td>{{ projet.idCdc }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('projet_show', { 'id': projet.id_projet }) }}">Afficher</a>
                                </li>
                                {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a href="{{ path('projet_edit', { 'id': projet.id_projet }) }}">Modifier</a>
                                </li>
                                {% endif %}
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% if is_granted('ROLE_ADMIN') %}
            <ul>
                <li>
                    <a href="{{ path('projet_new') }}">Créer un nouveau  projet</a>
                </li>
            </ul>
            <h2>TODO: 
                <h3>Accéder au Cahier des charges</h3>
                <h3>Faire une Offre pour ce Projet</h3>
            </h2>
            {% endif %}
        </div>
    </div>
{% endblock %}
