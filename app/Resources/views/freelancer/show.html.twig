{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Freelancer</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Afficher le Profil d'un Freelancer</h2>
        <div class="mycontentformshow">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-default" href="{{ path('freelancer_index') }}">Retourner Ã  la liste</a>
                </li>
            </ul>
            <table class="tableautitle">
                <tbody>
                    <tr>
                        <th class="mytdtabshow">Nom Freelancer</th>
                        <td class="mytdtabshow">{{ freelancer.id_freelancer }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">CV</th>
                        <td class="mytdtabshow2" ><a href="path('{{ freelancer.urlCv }}')" ><i class="fa fa-download fa-3x"></i></a></td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Photo</th>
                        <td class="mytdtabshow"><img class="myimg" src="/FreelancerSIO/web/{{ freelancer.urlPhoto }}" /></td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Age</th>
                        <td class="mytdtabshow2">{{ freelancer.age }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Iduser</th>
                        <td class="mytdtabshow">{{ freelancer.idUser }}</td>
                    </tr>
                </tbody>
            </table>
            <ul>
                <li class="myeditli">
                    <a class="btn btn-info" style="color:white;" href="{{ path('freelancer_edit', { 'id': freelancer.id_freelancer }) }}">Modifier</a>
                </li>
                <li class="mydeleteli">
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
