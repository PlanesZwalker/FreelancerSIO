{% extends "layout.html.twig" %}

{% block style %}
    
    <style>
        
        #ui-datepicker-div{
            background-color: lightskyblue;
        }
        
      

       
    </style>
    
{% endblock %}
    
{% block titre %}
    <h1 id="logo"><a href="front" style="color:#333;">Free Demat'IT Lancer's</a></h1>
    <h3 style="width:8vw; float:left; margin-left:5vw" >Rapide <strong>et accessible gratuitement</strong>!</h3>
{% endblock %}
{% block body %}
    <!-- Main -->
    <div >       
        <!-- Banner -->
        <div id="banner-wrapper" style="margin:3vw 10vw;">
             <div style="width:50vw ; margin-left:20%; margin-bottom:5vw; color:black;">
                 <h2>Parcourez les projets</h2>
                <!-- Formulaire de recherche -->
                {{ form_start(formRecherche) }}
                 
                  {{ form_errors(formRecherche) }}
                  {{ form_widget(formRecherche.Recherche) }}
                  
                     <div data-role="content" style="display:inline-block;width:10vw;">De
                        <input type="text" id="date-input" data-inline="false" data-role="date" >
                    </div> 
                    
                     <div data-role="content" style="display:inline-block; width:10vw;">A
                        <input type="text" id="date-input2" data-inline="false" data-role="date" >
                    </div> 
                  
                    {{ form_widget(formRecherche.MotsCles) }}
                     <input type="submit" value="Lancer la recherche"/>
                {{ form_end(formRecherche) }}  
                
            </div>
            
            <div class="inner">
                <section id="banner" class="container">
                    <p>Projet en ligne / <strong>&nbsp;Développeurs Connectés</strong>.<br />
                        Consulter les projets</p>

                <img src="loupe.png" style="width:8vw;" />
                </section>
            </div>
     
            <!-- Post -->
            <article class="box post" style="margin-top:2vw;">
                <header>
                    <h2><a href="#">Mettez en ligne vos<strong>Travaux</strong>
                            en trois étapes</a></h2>
                </header>
                <a href="#" class="image featured"><img src="clavier.jpg" alt=""  style="width:30vw;margin-left:25vw" /></a>
           
            </article>
        </div> 
    </div>


       

<!-- Banner -->
<div id="banner-wrapper" >
    <div class="inner">
        <section id="banner" class="container">
            <p>Elaboration de cahier des charges <strong>Contrat</strong>.<br />
                Paiement en ligne</p>

            <!-- Ajout d'un projet -->
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" style="margin:5px;"/>
            {{ form_end(form) }}
            <ul class="actions">
                <li><a href="#" class="button icon fa-file">En savoir plus</a></li>
            </ul>

        </section>
    </div>
</div>
            
            
<!-- Footer -->
<div id="footer-wrapper" style="width:75%;border-radius:8px; margin:10px 15% ">
    <div id="footer" class="container">
        <header>
            <h2>Questions ou Commentaires ? <strong>C'est ici:</strong></h2>
        </header>
        <div class="row">
            <div class="6u 12u(mobile)">
                <section>
                    <form method="post" action="#">
                        <div class="row 50%">
                            <div class="6u 12u(mobile)">
                                <input name="name" placeholder="Nom" style="width:14vw;" type="text" />
                            </div>
                            <div class="6u 12u(mobile)">
                                <input name="email" placeholder="Email" style="width:14.1vw;" type="text" />
                            </div>
                        </div>
                        <div class="row 50%">
                            <div class="12u">
                                <textarea name="message" placeholder="Message"></textarea>
                            </div>
                        </div>
                        <div class="row 50%">
                            <div class="12u">
                                <a href="#" class="form-button-submit button icon fa-envelope" style="margin-left:11vw;">Envoyer</a>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
            <div class="6u 12u(mobile)">
                <section>
                    <p>Sur les réeaux sociaux</p>
                    <div class="row">

                        <div class="6u 12u(mobile)">
                            <ul class="icons">
                                <li class="icon fa-twitter">
                                    <a href="#">@freelancer</a>
                                </li>
                                <li class="icon fa-instagram">
                                    <a href="#">instagram.com/freelancer</a>
                                </li>
                                <li class="icon fa-dribbble">
                                    <a href="#">dribbble.com/freelancer</a>
                                </li>
                                <li class="icon fa-facebook">
                                    <a href="#">facebook.com/freelancer</a>
                                </li>
                            </ul>
                        </div>
                        <div class="6u 12u(mobile)">
                            <ul class="icons">
                                <li class="icon fa-home">
                                    123 Avenue freelance<br />
                                    freelance, 10 000<br />
                                    FRANCE
                                </li>
                                <li class="icon fa-phone">
                                    (+33) 123-000-0000
                                </li>
                                <li class="icon fa-envelope">
                                    <a href="#">info@freelancer</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
    
</div>

{% endblock %}

{% block javascript %}
        
    <script>

        $( "#datepicker" ).datepicker();
   
    </script>

{% endblock %}


