{% extends "layout.html.twig" %}

{% block style %}{% endblock %}
{% block javascript %}
    <script>
     $(document).ready(function(){  
         
       $(".alert-success").fadeToggle(8000);

  
    
    });
    </script>
{% endblock %}
{% block titre %}
    <h1 id="logo"><a class="bigtitle">Free Demat'Lancer's</a></h1>
{% endblock %}



{% block body %}
    <div style="margin-left:15%;width:80%; ">
