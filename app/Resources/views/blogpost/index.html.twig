{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogposts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Draft</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blogPost in blogPosts %}
            <tr>
                <td><a href="{{ path('blogpost_show', { 'id': blogPost.id }) }}">{{ blogPost.id }}</a></td>
                <td>{{ blogPost.title }}</td>
                <td>{{ blogPost.body }}</td>
                <td>{% if blogPost.draft %}Yes{% else %}No{% endif %}</td>
                <td>{% if blogPost.createdAt %}{{ blogPost.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blogpost_show', { 'id': blogPost.id }) }}">Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('blogpost_edit', { 'id': blogPost.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blogpost_new') }}">Cr√©er un nouveau  blogPost</a>
        </li>
    </ul>
{% endblock %}
