{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Cahier des Charges</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Edition du Cahier des Charges</h2>
        <div class="mycontentform">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-default" href="{{ path('cahierdescharges_index') }}">Retourner Ã  la liste</a>
                </li>
            </ul>
            <table  class="tableautitle">
                <tbody>
                    {{ form_start(edit_form) }}
                    <tr>
                        <th class="mytdtabshow2">{{ form_row(edit_form.intitule) }}</th>
                    </tr>    
                    <tr>
                        <th class="mytdtabshow">{{ form_row(edit_form.tarif) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow2">{{ form_row(edit_form.delai) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow" style="display:none;">{{ cahierdescharges.id }}</th>
                    </tr>             
                </tbody>
            </table>   
           <input class="myeditinput" type="submit" value="Enregistrer les modifications" />
            {{ form_end(edit_form) }}
           
            {% if is_granted("ROLE_ADMIN") %}
            <ul>
                <li class="mydeleteli ">
                    {{ form_start(delete_form) }}
                        <input  type="submit" value="Supprimer le cahier des charges" >
                    {{ form_end(delete_form) }}
                </li>
            </ul>
            {% endif %}
        </div>
    </div>                              
{% endblock %}
