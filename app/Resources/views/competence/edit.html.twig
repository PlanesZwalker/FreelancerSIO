{% extends 'base.html.twig' %}
{% block titre %}

    <h1 id="logo"><a class="bigtitle">Compétences</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Edition de la compétence {{ competence.intitule }}</h2>
        <div class="mycontentform">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-success" href="{{ path('competence_index') }}">Retourner à la liste</a>
                </li>
            </ul>
            <table  class="tableautitle">
                <tbody>
                    {{ form_start(edit_form) }}
                    <tr>
                        <th class="mytdtabshow">{{ form_row(edit_form.intitule) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow">{{ form_row(edit_form.categorie) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow" >{{ form_row(edit_form.description) }}</th>
                    </tr>
                </tbody>
            </table>   
            <input class="myeditinput" type="submit" value="Enregistrer les modifications" />
            {{ form_end(edit_form) }}

            <ul>
                <li class="mydeleteli ">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer la compétence">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
