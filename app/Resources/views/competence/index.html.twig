{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Compétences</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Liste des Compétences</h2>
        <div class="mycontentform">
            <table>
                <thead>
                    <tr>
                        <th>id_competence</th>
                        <th>Categorie</th>
                        <th>Description</th>
                        <th>id_freelancer</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for competence in competences %}
                    <tr>
                        <td><a href="{{ path('competence_show', { 'id': competence.id_competence }) }}">{{ competence.id_competence }}</a></td>
                        <td>{{ competence.categorie }}</td>
                        <td>{{ competence.description }}</td>
                        <td>{{ competence.id_freelancer }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('competence_show', { 'id': competence.id_competence }) }}">Afficher</a>
                                </li>
                                <li>
                                    <a href="{{ path('competence_edit', { 'id': competence.id_competence }) }}">Modifier</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('competence_new') }}">Créer un nouveau  competence</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
