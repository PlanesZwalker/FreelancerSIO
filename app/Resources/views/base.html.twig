<!DOCTYPE html>
<html style="height: 100%; ">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Free Demat'IT Lancer's{% endblock %}</title>
        <style>        
         .manvav{color:black; font-size:23px; font-weight: 700; text-shadow: 0 2px 0 #5CAEDD; } 
      
        </style>
        
        {% block stylesheets %}{% endblock %}

            <link rel="icon" type="image/x-icon" href="{{ asset('iconsite.png') }}" />
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" />
            <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}" />
            <link rel="stylesheet"  href="{{ asset('assets/css/jquery.mobile-git.css') }}" /> 
            <link rel="stylesheet" href="{{ asset('assets/css/jquery.mobile.datepicker.css') }}" />
            <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->

        {% block style %}{% endblock %}

</head>

<body style="position:relative; margin: 0;  padding: 0;  color:black;  "> 

    <header id="header-wrapper" style="height:30vh;  ">
        <div id="header" class="container" style=" width:100%; height:20vh ;background-image: url('{{ asset('fond.jpg') }}'); ">
             <div style="position:absolute; top:150px; text-align:center; width:100vw; "> 
                {% block titre %}{% endblock %}  
            </div> 
            <h2 style=" color:#555;font-size:15px">Plateforme de Projets de <br>Développements Informatiques en Ligne</h2>
            {% block header %} {% endblock %}  
        </div>
    </header>  

    <nav data-role="navbar" style=" position:absolute; top:10px; width:95vw; margin-left:2vw ">
        <ul >    
            <li><a href="{{  path('front') }}" class="manav icon fa-home ">
                    &nbsp;&nbsp;&nbsp;<span>Accueil</span></a></li>    

            {% if is_granted("ROLE_USER") %}
                <li>
                    <a href="{{ path('logout') }}" class="manav icon fa-power-off">
                        &nbsp;&nbsp;&nbsp;<span>Se déconnecter</span>
                    </a>
                </li>
            {% else %}
                {% if app.request.pathInfo != '/login' %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}" class="manav icon fa-share-square-o">
                            &nbsp;&nbsp;&nbsp;<span>Se connecter</span>
                        </a>
                    </li>
                {% endif %}
            {% endif %}
            {% if app.request.pathInfo != '/register' %} 
                {% if not is_granted("ROLE_USER") %}
                    <li>
                        <a href="{{ path('fos_user_registration_register') }}" class="manav icon fa-user-plus">
                            &nbsp;&nbsp;&nbsp;<span>Créer un compte</span>
                        </a>
                    </li>
                {% endif %}
            {% endif %}               
            <li>
                <a href="{{ path('listprojet') }}"  class="manav icon Example of newspaper-o fa-newspaper-o ">
                    &nbsp;&nbsp;&nbsp;<span>Consulter les Projets</span>
                </a>
            </li>           
            <li>
                <a href="{{ path('listfreelancer') }}"  class="manav icon fa-users" >
                    &nbsp;&nbsp;&nbsp;<span>Voir les Freelancers</span>
                </a>  
            </li>
            {% if is_granted("ROLE_USER") %}
                <li>
                    <a href="{{ path('addprojet') }}"  class="manav icon fa-plus-square" >
                        &nbsp;&nbsp;&nbsp;<span>Créer un Projet</span>
                    </a>
                </li> 
                <li>
                    <a href="{{ path('editprofil') }}"  class="manav icon fa-edit" >
                        &nbsp;&nbsp;&nbsp;<span>Modifier mon Profil</span>
                    </a>
                </li> 
            {% endif %}
            {% block nav %}{% endblock %}
        </ul>
    </nav>

    {% block body %}
        {% block soustitre %}{% endblock %}
    {% endblock %}


    <footer style="background-color: rgba(1,1,1,0.3);font-size:13px; position:fixed;padding-top:5px; height:30px; bottom:0; width:100%; 
            text-align:left; color:white; text-shadow:none;" >
        <ul class="links">
            <li>&nbsp; &copy; Plateforme Mise En Ligne Projet De Développement Informatique</li> 
            <li style="float:right;margin-right:3%;">Mentions Légales 2016/2017</li>
            <li style="float:right; ">Accueil 
                <a href="{{ path('front') }}">Freelance Project</a>
            </li>
        </ul>  
        <!-- /footer -->
        {% block footer %} {% endblock %}
    </footer>

    {% block javascripts %}

            <script src="{{ asset('assets/js/jquery-1.9.1.js') }}"></script>            
            
            <script src="{{ asset('assets/js/jquery-ui.js') }}"></script>

            <script src="{{ asset('assets/js/jquery.mobile-git.js') }}"></script> 
 <script src="{{ asset('assets/js/jquery.ui.datepicker.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.mobile.datepicker.js') }}"></script> 
            
            {#     
                <script src="{{ asset('assets/js/external/jquery/jquery.js') }}"></script>  
                <script src="{{ asset('assets/js/skel.min.js') }}"></script>
                <script src="{{ asset('assets/js/skel-viewport.min.js') }}"></script>
                <script src="{{ asset('assets/js/util.js') }}"></script>
            #}
   
    {% endblock %}

</body>
</html>
