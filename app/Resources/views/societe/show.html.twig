{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Sociétés</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Profil de la Société: {{ societe.denomination }}</h2>
        <div class="mycontentformshow">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-default" data-ajax="false" href="{{ path('societe_index') }}">Retourner à la liste</a>
                </li>
            </ul>
            <table class="tableautitle">
                <tbody>
                    <tr>
                        <th class="mytdtabshow">Societe</th>
                        <td class="mytdtabshow">{{ societe.denomination }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Siret</th>
                        <td class="mytdtabshow2">{{ societe.siret }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Denomination</th>
                        <td class="mytdtabshow">{{ societe.adresse }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Présentation</th>
                        <td class="mytdtabshow2">{{ societe.presentation }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Logo</th>
                        <td class="mytdtabshow">{{ societe.logo }}</td>
                    </tr>
                </tbody>
            </table>
            <ul> 
                {% if is_granted("ROLE_ADMIN") %}
                <li>
                    <a class="btn btn-info" style="color:white;" data-ajax="false" href="{{ path('societe_edit', { 'id': societe.id }) }}">Modifier</a>
                </li>
               
                <li  class="mydeleteli">
                    {{ form_start(delete_form) }}
                        <input type="submit" rel="external" value="Supprimer le profil">
                    {{ form_end(delete_form) }}
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
