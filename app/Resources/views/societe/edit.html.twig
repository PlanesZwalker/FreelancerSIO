{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Sociétés</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Modifier le profil de la Société</h2>
        <div class="mycontentform">
             <ul>
                <li class="returnlist">
                    <a data-ajax="false" class="btn btn-default" href="{{ path('societe_index') }}">Retourner à la liste</a>
                </li>
            </ul>
            <table  class="tableautitle">
                <tbody>
                    
                    {{ form_start(edit_form) }}
                    <tr>
                        <th class="mytdtabshow">{{ form_row(edit_form.siret) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow2">{{ form_row(edit_form.denomination) }}</th>
                    </tr>  
                    <tr>
                        <th class="mytdtabshow">{{ form_row(edit_form.presentation) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow">{{ form_row(edit_form.adresse) }}</th>
                    </tr>        
                    <tr>
                        <th class="mytdtabshow2">{{ form_row(edit_form.logo) }}</th>
                    </tr>  s
           
                    <input rel="external" class="myeditinput" type="submit" value="Enregistrer les modifications" />
                    {{ form_end(edit_form) }}

                    {% if is_granted("ROLE_ADMIN") %}            
                    <ul>
                         <li class="mydeleteli ">

                                {{ form_start(delete_form) }}
                                    <input type="submit" rel="external" value="Supprimer le profil" />
                                {{ form_end(delete_form) }}

                        </li>
                    </ul> 
                    {% endif %}
                 </tbody>
            </table>  
        </div>
    </div>
{% endblock %}
