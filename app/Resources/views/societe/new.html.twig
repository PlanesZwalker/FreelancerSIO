{% extends 'base.html.twig' %}
{% block titre %}

    <h1 id="logo"><a class="bigtitle">Sociétés</a></h1>  

{% endblock %}

{% block body %}   
    <div class="formulairetop">
        <h2 class="mysubtitle">Nouveau Profil Société</h2>
        <div class="mycontentform">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-success" href="{{ path('societe_index') }}">Retourner à la liste</a>
                </li>
            </ul>


            {{ form_start(form) }}
            <div style="width:35%;margin-left:15%;  float:left; margin-right:2%;display:inline-table;">
                {{ form_row(form.denomination) }}
                {{ form_row(form.presentation) }}                        
                {{ form_row(form.adresse) }}
                {{ form_row(form.siret) }}
            </div>
            <div style="width:35%; float:left; display:inline-table;">
                {{ form_row(form.tel) }}
                {{ form_row(form.logo) }}

            </div>   
            <input class="myeditinput"  type="submit" value="Enregistrer le profil" />

            {{ form_end(form) }}


        </div>
    </div>
{% endblock %}
