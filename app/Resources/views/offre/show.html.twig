{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Afficher une Offre</h2>
        <div class="mycontentformshow">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-default" href="{{ path('offre_index') }}">Retourner Ã  la liste</a>
                </li>
            </ul>
            <table  class="tableautitle">
                <tbody>
                    <tr>
                        <th class="mytdtabshow">id_offre</th>
                        <td class="mytdtabshow">{{ offre.id_offre }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow2">Tarif</th>
                        <td class="mytdtabshow2">{{ offre.tarif }}</td>
                    </tr>
                    <tr>
                        <th class="mytdtabshow">Delai</th>
