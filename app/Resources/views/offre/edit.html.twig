{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Offres</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Edition d'une Offre</h2>
        <div class="mycontentform">
            <ul>
                <li class="returnlist">
                    <a class="btn btn-default" data-ajax=false" href="{{ path('offre_index') }}">Retourner à la liste</a>
                </li>
            </ul>
            <table class="tableautitle">
                <thead>
                    <div style="font-size:17px;">
                            Pseudo du freelancer: 
                        <div class="mytdtabshow2" style=" font-size:17px;"> {{ offre.freelancer.pseudo }}</div>
                            Intitulé du projet rattaché:
                        <div class="mytdtabshow2" style=" font-size:17px;"> {{ offre.projet.intitule }}</div>
                            Societe ayant publié le projet rattaché:
                        <div class="mytdtabshow2" style=" font-size:17px;"> {{ offre.projet.societe.denomination }}</div>
                    </div>
                </thead>
                <tbody>
                    <tr>
                        {{ form_start(edit_form) }}
                            {{ form_widget(edit_form) }}
                            <input  class="myeditinput"  type="submit" value="Modifier l'offre" />
                        {{ form_end(edit_form) }}
                    </tr>
                </tbody>
                     
            </table>
            <ul>
              {% if is_granted("ROLE_ADMIN") %}
                <li  class="mydeleteli">
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Supprimer l'offre">
                    {{ form_end(delete_form) }}
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
