{% extends 'base.html.twig' %}
{% block titre %}

    <h1 id="logo"><a class="bigtitle">Utilisateurs</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Profil {% if freelancer %} de  {{ freelancer.pseudo }} {% endif %} </h2>
        <div class="mycontentform">
            {% if is_granted("ROLE_ADMIN") %}     
                <ul>
                    <li class="returnlist">
                        <a class="btn btn-default" href="{{ path('user_index') }}">Retourner Ã  la liste</a>
                    </li>
                </ul>
            {% endif %}     
            <ul>
                <li class="returnlist">
                    <a class="btn btn-default" href="{{ path('user_show', { 'id': user.id }) }}">Retourner au profil Utilisateur</a>
                </li>
            </ul>
           {{ form_start(edit_form) }} 
           <div style="margin-left:15%;width:20%; display:inline-table">
                {{ form_row(edit_form.roles,{'label': 'Type de compte',
                                             'label_attr': {'class': 'myeditinput', 'style':'padding:10px;'},
                                             'separator': '=====' 
                                            }) 
                }}
           </div>
           <div style="width:40%; display:inline-table">
                {{ form_row(edit_form.username,{'label': 'Nom Utilisateur'}) }}
                {{ form_row(edit_form.name,{'label': 'Nom'}) }}
                {{ form_row(edit_form.firstname,{'label': 'Prenom'}) }}
                {{ form_row(edit_form.email,{'label': 'Email'}) }}
           </div>
                
                <input type="submit" class="myeditinput"  value="Enregistrer les modifications" />

           {{ form_end(edit_form) }}
            <ul>
                <li style="float:right">
                    <a class="btn btn-default" href="{{ path('fos_user_change_password', { 'id': user.id }) }}">Changer de Mot de Passe</a>
                </li>
                {% if is_granted("ROLE_ADMIN") %}     
                    <li class="mydeleteli">
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Supprimer l'utilisateur">
                        {{ form_end(delete_form) }}
                    </li>
                 {% endif %}     
            </ul>
        </div>
    </div>
{% endblock %}
