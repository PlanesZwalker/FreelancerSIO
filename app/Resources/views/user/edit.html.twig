{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Utilisateurs</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Editer l' utilisateur {{ user.username }} </h2>
        <div class="mycontentform">
            <ul>
                <li class="returnlist">
                    <a data-ajax="false" class="btn btn-default" href="{{ path('user_index') }}">Retourner à la liste</a>
                </li>
            </ul>
            <table class="tableautitle">
                <tbody>                   
                   {{ form_start(edit_form) }}  
                        {{ form_row(edit_form.roles,{'label': 'Type de compte'}) }}
                        {{ form_row(edit_form.username,{'label': 'Pseudo'}) }}
                        {{ form_row(edit_form.name,{'label': 'Nom'}) }}
                        {{ form_row(edit_form.firstname,{'label': 'Prenom'}) }}
                        {{ form_row(edit_form.email,{'label': 'Email'}) }}
                        {{ form_row(edit_form.password,{'label': 'Mot de passe'}) }}
                        {{ form_row(edit_form.last_login,{'label': 'Dernière connexion'}) }}
                               {{ dump(edit_form) }}  
                        <input type="submit"  class="myeditinput"  value="Enregistrer les modifications" data-icon="check"/>
                    {{ form_end(edit_form) }} 
                <li  style="display:inline-block;">
                    <a class="btn btn-default"   data-ajax="false" href="{{ path('user_edit', { 'id': user.id }) }}">Changer de Mot de Passe</a>
                </li>
            </tbody>
            </table> 
            <ul>
                <li>
                    {{ form_start(delete_form) }}
                          <input type="submit" value="Supprimer l'utilisateur">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
