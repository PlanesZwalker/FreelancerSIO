{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Blogpost</th>
                <th>Category</th>
                <th>Draft</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.blogPost }}</td>
                    <td>{{ category.category }}</td>
                    <td>{% if category.draft %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('category_show', { 'id': category.id }) }}">Afficher</a>
                            </li>
                            <li>
                                <a href="{{ path('category_edit', { 'id': category.id }) }}">Modifier</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_new') }}">Cr√©er un nouveau  category</a>
        </li>
    </ul>
{% endblock %}
