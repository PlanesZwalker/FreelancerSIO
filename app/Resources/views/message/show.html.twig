{% endblock %}

{% block body %}   
    <div class="formulairetop">
        <h2 class="mysubtitle">DÃ©tail du Message de '{{ message.idUserFrom.username }}' pour '{{ message.idUserFor.username }}'</h2>
        <div class="mycontentformshow">           
          
            <table class="tableautitle">
                <tbody>
                    <tr>
                        <th class="mytdtabshow2">De</th>
                        <td class="mytdtabshow2">{{ message.idUserFrom.username }}</td>
