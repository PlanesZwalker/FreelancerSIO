{% extends 'base.html.twig' %}
{% block titre %}

        <h1 id="logo"><a class="bigtitle">Messages</a></h1>  

{% endblock %}

{% block body %}    
    <div class="formulairetop">
        <h2 class="mysubtitle">Liste des Messages</h2>
        <div class="mycontentform">
            <table>
                <thead>
                    <tr>
                        <th>Idmessage</th>
                        <th>id_freelancer</th>
                        <th>id_societe</th>
                        <th>Type</th>
                        <th>Sujet</th>
                        <th>Contenu</th>
                        <th>Date</th>
                        <th>Idadmin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td><a href="{{ path('message_show', { 'id': message.idMessage }) }}">{{ message.idMessage }}</a></td>
                        <td>{{ message.id_freelancer }}</td>
                        <td>{{ message.id_societe }}</td>
                        <td>{{ message.type }}</td>
                        <td>{{ message.sujet }}</td>
                        <td>{{ message.contenu }}</td>
                        <td>{% if message.date %}{{ message.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ message.idAdmin }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('message_show', { 'id': message.idMessage }) }}">Afficher</a>
                                </li>
                                <li>
                                    <a href="{{ path('message_edit', { 'id': message.idMessage }) }}">Modifier</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('message_new') }}">CrÃ©er un nouveau  message</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
