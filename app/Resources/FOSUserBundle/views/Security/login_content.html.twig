{% trans_default_domain 'FOSUserBundle' %}
<div class="formulairetop">
       {% block soustitre %} <h2 class="mysubtitle">Formulaire de connexion</h2> {% endblock %}

    <form action="{{ path("fos_user_security_check") }}" method="post" style="margin-top:0; margin-bottom:20%;width:70%; margin-left:15%;padding:2%; border-radius:0px 0px 8px 8px;background-color: rgba(1,1,1,0.3)">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div style=" width:60%;margin-left:20%;">
            
            {% if error %}
                <h3 class="myerror">{{ error.messageKey|trans(error.messageData, 'security') }}</h3>
             {% endif %}
                <label for="username" style="margin-top:20px;">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                <label  for="password"  style="margin-top:20px;">{{ 'security.login.password'|trans }}</label>
                <input  type="password"  id="password" name="_password" required="required" />

                <div style="width:20vw; margin-left:3vw; margin-top:20px;">
                    
                     <input  class="myeditinput"  style="display:inline-block;" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                     <input  style="color:blue; width:20px; height:20px; padding-top:20px; margin-left:20px; "   type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label style="" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <div>
        </div>
    </form>

</div>
