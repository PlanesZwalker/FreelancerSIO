{% trans_default_domain 'FOSUserBundle' %}
<div style="text-align:center; margin-top:3%;">
       {% block soustitre %} <h2 class="mysubtitle">Formulaire de connexion</h2> {% endblock %}
{% if error %}
   <h2>{{ error.messageKey|trans(error.messageData, 'security') }}</h2>
{% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" style="margin-top:-3%; background-color:#E0E0E1;  margin-bottom:20%; padding:2%; border-radius:0px 0px 8px 8px">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

        <label  for="password">{{ 'security.login.password'|trans }}</label>
        <input  type="password"  id="password" name="_password" required="required" />

      
        <label style="display:inline-table" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
       <input style="display:none" type="checkbox" id="remember_me" name="_remember_me" value="on" />
       
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>

</div>
