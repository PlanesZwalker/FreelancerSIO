{# src/freelancerppe/views/index.html.twig #}

{% extends "layout.html.twig" %}

{% block title %}
    Listes
{% endblock %}

{% block content %}
    <section class="content">
        <div class="row">
            <div class="box-group" id="accordion">
                <div class="panel box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="{{ path('studentslist') }}" aria-expanded="false" class="collapsed">
                                Liste des freelancers
                            </a>
                        </h4>
                    </div>
                </div>
                <div class="panel box box-danger">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="{{ path('teacherlist') }}" class="collapsed" aria-expanded="false">
                                Liste des sociétés
                            </a>
                        </h4>
                    </div>
                </div>
                <div class="panel box box-success">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="{{ path('userslist') }}" class="collapsed" aria-expanded="false">
                                Liste des utilisateurs
                            </a>
                        </h4>
                    </div>
                </div>
                <div class="panel box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="{{ path('disciplineslist') }}" class="collapsed" aria-expanded="false">
                                Liste des matières
                            </a>
                        </h4>
                    </div>
                </div>
                <div class="panel box box-danger">
                    <div class="box-header with-border">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="{{ path('examlist') }}" class="collapsed" aria-expanded="false">
                                Liste des tests
                            </a>
                        </h4>
                    </div>
                </div>
            </div>
        </div><!-- row -->
    </section>
{% endblock %}