{% extends "layout.html.twig" %}

{% block title %}
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    Liste des compétences &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <span style="font-size:14px;">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('adddiscipline') }}"><i class="fa fa-plus"></i>&nbsp; Ajouter une compétence</a>
        {% endif %}
  </span>
{% endblock %}

{% block content %}
    <!-- Div pour afficher le nombre d'étudiants total -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    {#Affiche un message d'ajout réussi#}
                    {% for success in app.session.getFlashBag.get('success') %}
                        <div class="alert alert-success myfade">
                            {{ success }}
                        </div>
                    {% endfor %}
                    {% for danger in app.session.getFlashBag.get('danger') %}
                        <div class="alert alert-danger myfade">
                            {{ danger }}
                        </div>
                    {% endfor %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-hover table-striped">
                        <thead>
                            <tr style="background-color: #3c8dbc">
                                <th style="text-align: center; border: 1px solid darkgrey;">Nom de la compétence</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Description</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Modifier</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Supprimer</th>
                            </tr>
                        </thead>
                      {#  {% for utilisateur in users %} #}
                           {% for discipline in disciplines %} 
                            {#    {% if utilisateur.discipline.getIdDiscipline() == discipline.getIdDiscipline() %} #}
                            <tr style="color:black;">

                                <td style="text-align: center; border: 1px solid darkgrey;" >{{ discipline.getNameDiscipline() }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ discipline.getDescription() }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">
                                    <form action="{{ path('discipline_edit') }}" method="post" >
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-warning btn-flat">
                                                <i class="fa fa-pencil"></i>
                                                <input type="hidden" name="id_discipline" value="{{ discipline.getIdDiscipline() }}">
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td style="text-align: center; border: 1px solid darkgrey;">
                                    <form action="{{ path('discipline_deleted') }}" method="post">
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-danger btn-flat" onclick="return confirm('Etes-vous sûr(e) de vouloir supprimer la compétence {{ discipline.getNameDiscipline() }} ?')">
                                                <i class="fa fa-trash"></i>
                                                <input type="hidden" name="id_discipline" value="{{ discipline.getIdDiscipline() }}">
                                            </button>
                                        </div>
                                    </form>
                                </td>

                            </tr>
                          {#      {% endif %} #}
                            {% endfor %} 
                       {# {% endfor %} #}
                        <tfoot>
                            <tr class="odd">
                                <th style="text-align: center; border: 1px solid darkgrey;">Nom de la compétence</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Description</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Modifier</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Supprimer</th>
                            </tr>
                        </tfoot>
                    </table>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}