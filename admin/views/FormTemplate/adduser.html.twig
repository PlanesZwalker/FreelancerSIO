{% extends "layout.html.twig" %}

{% block title %}
    {% if user is defined %}
        Formulaire de modification de l'utilisateur {{ user.username }}
    {% else %}
        Formulaire d'ajout d'utilisateur
    {% endif %}
{% endblock %}

{% block content %}

    <div class="box box-primary">
   
        <form role="form" method="post" action="{{ path('user_added') }}">
   
                                                                    {#  AJOUT DE L'UTILISATEUR #}
                                                                     
            <div class="box-body" style="margin-left:2rem; width: 90%; ">
                {% if user is defined %}
                    <input type="hidden" id="id_user" name="id_user" class="form-control" value="{{ user.getId_User() }}">
                    <div class="form-group" >
                        <label>Pseudo<span style="color:red;">*</span></label>
                        {#Ajoute le login de l'utilisateur#}
                        <input type="text" style=" width: 25% ;border-radius: 3px" id="username" name="pseudo" class="form-control" value="{{ user.getPseudo() }}">
                    </div>
                    <div class="form-group">
                        <label>Nom</label>
                        {#Ajoute le nom de l'utilisateur#}
                        <input type="text" id="name" name="nomuser" style=" width: 25% ;border-radius: 3px" class="form-control" value="{{ user.getNomuser() }}">
                    </div>
                    <div class="form-group">
                        <label>Prénom</label>
                        {#Ajoute le prénom de l'utilisateur#}
                        <input type="text" id="firstname" name="prenomuser" style=" width: 25% ;border-radius: 3px" class="form-control" value="{{ user.getPrenomUser() }}">
                    </div>
                    <div class="form-group">
                        <label>Rôle <span style="color:red;">*</span></label>
                      {# value="{{ user.getRole() }}" #}
                     
                        {#Crée une liste déroulte de 3 roles d'utilisateur#}
                        <select name="role" class="form-control" style=" width: 25% ;border-radius: 3px">
                            <option>ROLE_ADMIN</option>
                            <option>ROLE_FREELANCER</option>
                            <option>ROLE_SOCIETE</option>
                        </select>
                    </div>                      
                       
                    <div class="form-group">
                        <label>Email <span style="color:red;">*</span></label>
                        {#Ajoute l'adresse mail de l'utilisateur#}
                        <input type="email" id="mail" name="email" style=" width: 25% ;border-radius: 3px" class="form-control" value="{{ user.getEmail() }}">
                    </div>
                    <div class="form-group">
                        <label for="#">N° de téléphone</label>
                        {#Ajoute le numéro de téléphone de l'étudiant#}
                        <input type="text" pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$"
                               class="form-control" style=" width: 25% ;border-radius: 3px" id="#" name="telephone" value="{{ 0~''~user.getTelephone() }}">
                    </div>
                    <div class="form-group">
                        <label>Mot de passe</label>
                        {#Ajoute le mot de passe de l'utilisateur#}
                        <input type="password" id="password" name="motdepasse" style=" width: 25% ;border-radius: 3px" class="form-control" placeholder="">
                    </div>
                {% else %}                              
                    
                    
                                                                    {#  MODIFICATION DE L'UTILISATEUR #}
                                                                    
                                                                    
                                                                    
                                                                    
                    <div class="form-group" >
                        <label>Pseudo<span style="color:red;">*</span></label>
                        {#Ajoute le login de l'utilisateur#}
                        <input type="text" style=" width: 25% ;border-radius: 3px" name="pseudo" class="form-control" required placeholder="Ex : jdUFIP2015">
                    </div>
                    <div class="form-group">
                        <label>Nom</label>
                        {#Ajoute le nom de l'utilisateur#}
                        <input type="text" name="nomuser" style=" width: 25% ;border-radius: 3px" class="form-control" placeholder="Ex : Dupont">
                    </div>
                    <div class="form-group">
                        <label>Prénom</label>
                        {#Ajoute le prénom de l'utilisateur#}
                        <input type="text" name="prenomuser" style=" width: 25% ;border-radius: 3px" class="form-control" placeholder="Ex : Jean">
                    </div>
                    <div class="form-group">
                        <label>Rôle <span style="color:red;">*</span></label>
                        {#Crée une liste déroulante de 3 roles d'utilisateur#}
                        <select  name="role" class="form-control" style=" width: 25% ;border-radius: 3px" >
                            <option>ROLE_ADMIN</option>
                            <option>ROLE_FREELANCER</option>
                            <option>ROLE_SOCIETE</option>
                        </select>
                    </div>     
                    <div class="form-group">
                        <label>Email  <span style="color:red;">*</span></label>
                        {#Ajoute l'adresse mail de l'utilisateur#}
                        <input type="email"  name="email" style=" width: 25% ;border-radius: 3px" class="form-control" id="inputEmail3" required placeholder="Ex : jdufip@gmail.com ...">
                    </div>
                    <div class="form-group">
                        <label for="#">N° de téléphone</label>
                        {#Ajoute le numéro de téléphone de l'étudiant#}
                        <input type="text" pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$"
                               class="form-control" style=" width: 25% ;border-radius: 3px" id="#" name="telephone" placeholder="Ex : 0656543487">
                    </div>
                    <div class="form-group">
                        <label>Mot de passe <span style="color:red;">*</span></label>
                        {#Ajoute le mot de passe de l'utilisateur#}
                        <input type="password"  name="motdepasse" style=" width: 25% ;border-radius: 3px" class="form-control" placeholder="Minimum 6 caractères">
                    </div>
                {% endif %}
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Enregistrer</button>
            </div>
            {#Affiche un message d'ajout réussi#}
            {% for success in app.session.getFlashBag.get('success') %}
                <div class="alert alert-success fade">
                    {{ success }}
                </div>
            {% endfor %}
          
        </form>
      
    </div>

{% endblock %}