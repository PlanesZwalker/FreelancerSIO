{% extends "layout.html.twig" %}

{% block title %}
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    Liste des Compétences &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <span style="font-size:14px;">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('addcompetence') }}"><i class="fa fa-plus"></i>&nbsp; Ajouter une compétence</a>
        {% endif %}
  </span>
{% endblock %}

{% block content %}
    <!-- Div pour afficher le nombre d'étudiants total -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    {#Affiche un message d'ajout réussi#}
                    {% for success in app.session.getFlashBag.get('success') %}
                        <div class="alert alert-success myfade">
                            {{ success }}
                        </div>
                    {% endfor %}
                    {% for danger in app.session.getFlashBag.get('danger') %}
                        <div class="alert alert-danger myfade">
                            {{ danger }}
                        </div>
                    {% endfor %}
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-hover table-striped">
                        <thead>
                            <tr style="background-color: #3c8dbc">
                                <th style="text-align: center; border: 1px solid darkgrey;">Nom de la Compétence</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Tests associés</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Modifier</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Supprimer</th>
                            </tr>
                        </thead>
                        {% for utilisateur in users %}
                            {% for competence in competences %}
                 
                            <tr style="color:black;">

                                <td style="text-align: center; border: 1px solid darkgrey;" ></td>
                                <td style="text-align: center; border: 1px solid darkgrey;">{{ utilisateur.getNomuser()~' '~utilisateur.getPrenomuser() }}</td>
                                <td style="text-align: center; border: 1px solid darkgrey;">
                                    <form action="{{ path('competence_edit', {'id_competence': competence.getId_competence() }) }}" method="post" >
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-warning btn-flat">
                                                <i class="fa fa-pencil"></i>
                                                <input type="hidden" name="id_competence" value="{{ competence.getId_competence() }}">
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td style="text-align: center; border: 1px solid darkgrey;">
                                    <form action="{{ path('competence_deleted', {'id_competence': competence.getId_competence() }) }}" method="post">
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-danger btn-flat" onclick="return confirm('Etes-vous sûr(e) de vouloir supprimer la compétence ?')">
                                                <i class="fa fa-trash"></i>
                                                <input type="hidden" name="id_competence" value="{{ competence.getId_competence() }}">
                                            </button>
                                        </div>
                                    </form>
                                </td>

                            </tr>
                              
                            {% endfor %}
                        {% endfor %}
                        <tfoot>
                               <tr class="sorting">
                                <th style="text-align: center; border: 1px solid darkgrey;">Nom de la Compétence</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Tests associés</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Modifier</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Supprimer</th>
                            </tr>
                        </tfoot>
                    </table>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}