{% extends "layout.html.twig" %}

{% block title %}
    Listes des sociétés &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <span style="font-size:14px;">
      <a href="{{ path('societe') }}"><i class="fa fa-plus"></i>&nbsp; Ajouter une société</a>
  </span>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    {% for success in app.session.getFlashBag.get('success') %}
                        <div class="alert alert-success myfade">
                            {{ success }}
                        </div>
                    {% endfor %}
                    {% for danger in app.session.getFlashBag.get('danger') %}
                        <div class="alert alert-danger myfade">
                            {{ danger }}
                        </div>
                    {% endfor %}
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-hover table-striped">
                        <thead>
                            <tr style="background-color: #3c8dbc">
                                <th style="text-align: center; border: 1px solid darkgrey;">Nom</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Prénom</th>
                               
                                <th style="text-align: center; border: 1px solid darkgrey;">Adresse mail</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">N° de téléphone</th>
                                {#<th style="text-align: center; border: 1px solid darkgrey;">Adresse</th>#}
                                <th style="text-align: center; border: 1px solid darkgrey;">Projets Rattachés</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Modifier</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for societe in societes %}
                                    <tr style="color:black;">
                                        <td style="text-align: center; border: 1px solid darkgrey;">{{ societe.getNomuser() }}</td>
                                        <td style="text-align: center; border: 1px solid darkgrey;">{{ societe.getPrenomuser() }}</td>
                                        <td style="text-align: center; border: 1px solid darkgrey;">{{ societe.getEmail() }}</td>
                                        <td style="text-align: center; border: 1px solid darkgrey;">{{ societe.getTelephone() }}</td>
                                        <td style="text-align: center; border: 1px solid darkgrey;">{# societe.discipline.getNameDiscipline() #}</td>
                                        <td style="text-align: center; border: 1px solid darkgrey;">
                                            <form action="{{ path('societe_edit', {'id_societe': societe.getId_societe() }) }}" method="post" >
                                                <div class="btn-group">
                                                    <button type="submit" class="btn btn-warning btn-flat">
                                                        <i class="fa fa-pencil"></i>
                                                        <input type="hidden" id="id_societe" name="id_societe" value="{{ societe.getId_societe() }}">
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td style="text-align: center; border: 1px solid darkgrey;">
                                            <form action="{{ path('societe_delete', {'id_societe': societe.getId_societe() }) }}" method="post" >
                                                <div class="btn-group">
                                                    <button type="submit" class="btn btn-danger btn-flat" onclick="return confirm('Etes-vous sûr(e) de vouloir supprimer la société {{ societe.getPseudo() }} ?')">
                                                        <i class="fa fa-trash"></i>
                                                        <input type='hidden' name="id" value="{{ societe.getId_societe() }}">
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr class="odd">
                                <th style="text-align: center; border: 1px solid darkgrey;">Nom</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Prénom</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Adresse mail</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">N° de téléphone</th>
                                {#<th style="text-align: center; border: 1px solid darkgrey;">Adresse</th>#}
                                <th style="text-align: center; border: 1px solid darkgrey;">Projets Ratachés</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Modifier</th>
                                <th style="text-align: center; border: 1px solid darkgrey;">Supprimer</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}